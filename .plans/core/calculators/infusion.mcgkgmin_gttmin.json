{
  "id": "infusion.mcgkgmin_gttmin",
  "name": "μg/kg/min ↔ gtt/min",
  "version": "1.0.0",
  "inputs": [
    {"id": "weight_kg", "label": "Peso (kg)", "type": "number", "unit": "kg", "min": 0.5},
    {"id": "rate_mcgkgmin", "label": "Taxa (μg/kg/min)", "type": "number", "unit": "µg/kg/min", "min": 0},
    {"id": "concentration_mg_ml", "label": "Concentração (mg/mL)", "type": "number", "unit": "mg/mL", "min": 0.001},
    {"id": "drop_factor", "label": "Fator de gotejamento (gtt/mL)", "type": "number", "unit": "gtt/mL", "min": 5, "max": 120}
  ],
  "expressions": {
    "ml_per_h": "(rate_mcgkgmin * weight_kg * 60) / (1000 * concentration_mg_ml)",
    "gtt_per_min": "(ml_per_h * drop_factor) / 60",
    "rate_mcgkgmin": "(gtt_per_min * 1000 * concentration_mg_ml) / (weight_kg * drop_factor)"
  },
  "outputs": [
    {"id": "gtt_per_min", "unit": "gtt/min", "decimals": 0},
    {"id": "rate_mcgkgmin", "unit": "µg/kg/min", "decimals": 3}
  ],
  "examples": [
    {"in": {"weight_kg": 70, "rate_mcgkgmin": 5, "concentration_mg_ml": 0.2, "drop_factor": 20}, "out": {"gtt_per_min": 35, "rate_mcgkgmin": 5.0}},
    {"in": {"weight_kg": 60, "rate_mcgkgmin": 0.5, "concentration_mg_ml": 0.1, "drop_factor": 15}, "out": {"gtt_per_min": 5, "rate_mcgkgmin": 0.5}},
    {"in": {"weight_kg": 50, "rate_mcgkgmin": 1.2, "concentration_mg_ml": 0.08, "drop_factor": 20}, "out": {"gtt_per_min": 6, "rate_mcgkgmin": 1.2}},
    {"in": {"weight_kg": 80, "rate_mcgkgmin": 10, "concentration_mg_ml": 1.0, "drop_factor": 60}, "out": {"gtt_per_min": 8, "rate_mcgkgmin": 10.0}},
    {"in": {"weight_kg": 3.5, "rate_mcgkgmin": 20, "concentration_mg_ml": 0.05, "drop_factor": 20}, "out": {"gtt_per_min": 7, "rate_mcgkgmin": 20.0}}
  ],
  "notes": "Relaciona μg/kg/min à taxa de gotas por minuto considerando o peso, a concentração e o fator de gotejamento.",
  "references": ["Fórmulas de infusão clínica"]
}